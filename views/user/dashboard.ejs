<h2><%= msg('authorized-apps') %></h2>
<% if (apps.success) { %>
  <% if (apps.authorizedapps.length) { %>
    <ul class="action-list">
      <%- partial('app/authedappitem', apps.authorizedapps) %>
    </ul>
  <% } else { %>
    <%= msg('no-apps-yet') %>
  <% } %>
<% } else { %>
  <p>
    <%= msg('error-retrieving-apps') %>
  </p>
<% } %>
<hr>

<a href="/appreg" class="btn" style="float:right;position:relative;top:10px">
  <i class="icon-plus icon-white"></i>
  <%= msg('register-new-app') %>
</a>
<h2><%= msg('registered-apps') %></h2>
<% if (apps.success) { %>
  <% if (apps.apps.length) { %>
    <ul>
      <%- partial('partials/appitem', apps.apps) %>
    </ul>
  <% } else { %>
    <%= msg('no-apps-yet') %>
  <% } %>
<% } else { %>
  <p>
    <%= msg('error-retrieving-apps') %>
  </p>
<% } %>
<hr>

