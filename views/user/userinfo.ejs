<table>
  <tr>
    <th>Accounts9 ID</th>
    <td><%= user.uid %></td>
  </tr>
  <% if (user.nickname) { %>
    <tr>
      <th><%= msg('Nickname') %></th>
      <td><%= user.nickname %></td>
    </tr>
  <% } %>
  <% if (user.fullname) { %>
    <tr>
      <th><%= msg('full-name') %></th>
      <td><%= user.fullname %></td>
    </tr>
  <% } %>
  <% if (user.email) { %>
    <tr>
      <th><%= msg('Email') %></th>
      <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
    </tr>
  <% } %>
  <% if (user.emails) { %>
    <tr>
      <th><%= msg('Emails') %></th>
      <% for(var i=0; i<user.emails.length; i++) { %>
      <td><a href="mailto:<%= user.emails[i] %>"><%= user.emails[i] %></a></td>
      <% } %>
    </tr>
  <% } %>
  <% if (user.mobile) { %>
    <tr>
      <th><%= msg('Mobile') %></th>
      <td><%= user.mobile %></td>
    </tr>
  <% } %>
  <% if (user.website) { %>
    <tr>
      <th><%= msg('Website') %></th>
      <td><a href="<%= user.website %>" target="_blank"><%= user.website %></a></td>
    </tr>
  <% } %>
  <% if (user.address) { %>
    <tr>
      <th><%= msg('Address') %></th>
      <td><%= user.address %></td>
    </tr>
  <% } %>
  <% if (user.birthdate) { %>
    <tr>
      <th><%= msg('birth-date') %></th>
      <td><%= msg('birthdate-format', user.birthdate.slice(0, 4), user.birthdate.slice(4, 6), user.birthdate.slice(6, 8)) %></td>
    </tr>
  <% } %>
  <% if (user.bio) { %>
    <tr>
      <th><%= msg('Bio') %></th>
      <td><%= user.bio %></td>
    </tr>
  <% } %>
  <% if (user.directGroups) { %>
  <tr>
    <th><%= msg('belong-groups') %></th>
    <td>
      <%- partial('group/grouplistplain', user.directGroups) %>
    </td>
  </tr>
  <% } %>
  <% if (user.adminGroups) { %>
  <tr>
    <th><%= msg('admin-groups') %></th>
    <td>
      <%- partial('group/grouplistplain', user.adminGroups) %>
    </td>
  </tr>
  <% } %>
  <tr>
  	<th><%= msg('bind-cards') %></th>
  	<td>
		<% if (isRoot) { %>
		<a href="/card9/<%= user.name %>">
		<% } %>
		<%= user.identity.length %> <%= msg('card-unit') %>
		<% if (isRoot) { %>
		</a>
		<% } %>
  	</td>
</table>
